<Window x:Class="DeveImageOptimizerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:DeveImageOptimizerWPF.Converters"
        mc:Ignorable="d"
        Title="DeveImageOptimizer" Height="350" Width="525">
    <Window.Resources>
        <l:KbConverter x:Key="kbConverter"/>
        <l:OptimizedSizeConverter x:Key="optimizedSizeConverter"/>
        <l:OptimizedSizeCollectionConverter x:Key="optimizedSizeConverterFullState"/>
    </Window.Resources>
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Main"  DataContext="{Binding Main, Source={StaticResource Locator}}">
                <Grid Background="AliceBlue">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Path:"></Label>
                    <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding WindowState.ProcessingDirectory, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <Button Grid.Column="1" Content="Browse"></Button>
                    </Grid>
                    <Button Grid.Row="2" Content="Go" Command="{Binding GoCommand}"/>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Success"></Label>
                            <ListBox Grid.Row="1" ItemsSource="{Binding FilesProcessingState.ProcessedFiles}" SelectedItem="{Binding FilesProcessingState.SelectedProcessedFile}"></ListBox>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Details"></Label>
                            <StackPanel Grid.Row="1">
                                <Label Content="Path:"></Label>
                                <TextBox Text="{Binding FilesProcessingState.SelectedProcessedFile.Path, Mode=OneWay}" IsReadOnly="True"></TextBox>
                                <Label Content="Original Size:"></Label>
                                <TextBox Text="{Binding FilesProcessingState.SelectedProcessedFile.OriginalSize, Mode=OneWay, Converter={StaticResource kbConverter}}" IsReadOnly="True"></TextBox>
                                <Label Content="Optimized Size:"></Label>
                                <TextBox Text="{Binding FilesProcessingState.SelectedProcessedFile.OptimizedSize, Mode=OneWay, Converter={StaticResource kbConverter}}" IsReadOnly="True"></TextBox>
                                <Label Content="Size reduced by:"></Label>
                                <TextBox Text="{Binding FilesProcessingState.SelectedProcessedFile, Mode=OneWay, Converter={StaticResource optimizedSizeConverter}}" IsReadOnly="True"></TextBox>

                            </StackPanel>
                            
                        </Grid>
                        <Grid Grid.Column="2" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" Content="Total"></Label>
                            <StackPanel Grid.Row="1">
                                <Label Content="Size reduced by:"></Label>
                                <TextBox Text="{Binding FilesProcessingState.ProcessedFiles, Mode=OneWay, Converter={StaticResource optimizedSizeConverterFullState}}" IsReadOnly="True"></TextBox>

                            </StackPanel>

                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Configuration"  DataContext="{Binding Settings, Source={StaticResource Locator}}">
                <Grid Background="AliceBlue">
                    <ScrollViewer Margin="0,0,0,35">
                        <StackPanel>
                            <Label Content="FileOptimizer Path:"></Label>
                            <Grid HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" Text="{Binding UserSettingsData.FileOptimizerPath, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                <Button Grid.Column="1" Content="Browse"></Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                    <Button Content="Save" Height="35" VerticalAlignment="Bottom" Command="{Binding SaveCommand}" IsEnabled="{Binding UserSettingsData.IsChanged}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
